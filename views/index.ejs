<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" integrity="sha512-Fo3rlrZj/k7ujTnHg4CGR2D7kSs0v4LLanw2qksYuRlEzO+tcaEPQogQ0KaoGN26/zrn20ImR1DfuLWnOo7aBA==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <title>Document</title>
</head>
<body>
    <center>
        <h1>En64 encoder and decoder</h1>
    </center>
    <br>
    <br>
    <br>
    <br>
    <center>
        <div class="parent">
            <textarea id="encode" class="float-start" cols="75" rows="25"></textarea>
            <textarea id="decode" class="float-end" cols="75" rows="25"></textarea>
            <div id="buttons child">
                <button onclick="encode()" class="child btn btn-outline-success pt-100"><i class="fas fa-arrow-right"></i> Encode <i class="fas fa-arrow-right"></i></button><br><br> 
                <button onclick="decode()" class="child btn btn-outline-danger"> <i class="fas fa-arrow-left"></i> Decode <i class="fas fa-arrow-left"></i></button>
            </div>
        </div>
    </center>
    <script>
        const encode = () =>{
            var url = `/api/encode?query=${document.getElementById("encode").value}`;
            fetch(url)
                .then(response => response.json())
                .then(data => {
                    var decode = document.getElementById("decode")
                    decode.value = data.message;
                })
                .catch(err => console.error(err));            
        }
        const decode = () =>{
            var url = `/api/decode?query=${document.getElementById("decode").value}`;
            fetch(url)
                .then(response => response.json())
                .then(data => {
                    var encode = document.getElementById("encode")
                    encode.value = data.message;
                })
                .catch(err => console.error(err));  
        }
    </script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.10.2/dist/umd/popper.min.js" integrity="sha384-7+zCNj/IqJ95wo16oMtfsKbZ9ccEh31eOz1HGyDuCQ6wgnyJNSYdrPa03rtR1zdB" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.min.js" integrity="sha384-QJHtvGhmr9XOIpI6YVutG+2QOK9T+ZnN4kzFN1RtK3zEFEIsxhlmWl5/YESvpZ13" crossorigin="anonymous"></script>    
    <style>
	textarea { resize: none; }
    .pt-100{
        margin-top: 25vh;
    }
    #buttons::after{
        content: "\a";
        white-space: pre;
    }
    </style>
</body>
</html>
